# =============================================
# Portal (namgun.or.kr) — Environment Variables
# =============================================
# Copy to .env when deploying as namgun.or.kr portal:
#   cp .env.portal.example .env
#
# Use with:
#   docker compose -f docker-compose.yml -f docker-compose.portal.yml up -d
# =============================================

# ─── App ───
APP_NAME=namgun.or.kr Portal
APP_URL=https://namgun.or.kr
DOMAIN=namgun.or.kr
DEBUG=false
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET

# ─── PostgreSQL ───
DB_USER=workspace
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DATABASE_URL=postgresql+asyncpg://workspace:CHANGE_ME_TO_STRONG_PASSWORD@postgres:5432/workspace

# ─── Stalwart Mail (external VM) ───
STALWART_URL=http://192.168.0.250:8080
STALWART_ADMIN_USER=admin
STALWART_ADMIN_PASSWORD=CHANGE_ME

# ─── SMTP (external VM) ───
SMTP_HOST=192.168.0.250
SMTP_PORT=587
SMTP_USER=noreply@namgun.or.kr
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM=noreply@namgun.or.kr

# ─── Admin ───
ADMIN_EMAILS=admin@namgun.or.kr

# ─── Gitea (external VM) ───
GITEA_URL=http://192.168.0.150:3000
GITEA_TOKEN=

# ─── LiveKit (external or disabled) ───
LIVEKIT_URL=http://192.168.0.150:7880

# ─── OAuth Provider (Gitea SSO) ───
OAUTH_CLIENTS_JSON={}

# ─── External Proxy Mode ───
# Portal runs behind existing nginx on the host
NGINX_PROFILE=external
